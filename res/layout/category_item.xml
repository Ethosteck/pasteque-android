<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="@dimen/categorySelectorWidth"
        android:layout_height="@dimen/categorySelectorHeight"
        android:background="@drawable/category_selector"
        android:paddingLeft="@dimen/contentMargin"
        android:paddingRight="@dimen/contentMargin"
        android:paddingTop="@dimen/contentMargin">

        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/category_name"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/contentMargin"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu_about" />

        <TextView
            android:id="@+id/category_name"
            style="@style/iconBtnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Placeholder name"
            android:textSize="@dimen/textSmall" />
    </RelativeLayout>

</merge>