<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.8"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:src="@drawable/ic_menu_about" />

    <include layout="@layout/separator" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5">

        <LinearLayout
            android:id="@+id/product_label_group"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_above="@+id/product_edit_group"
            android:gravity="center_vertical">

            <!-- Static text here is only for Preview -->
            <TextView
                android:id="@+id/product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparence"
                android:gravity="center_horizontal"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/contentMargin"
                android:background="@color/transparence"
                android:gravity="center_horizontal"
                android:text="x" />

            <TextView
                android:id="@+id/product_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/contentMargin"
                android:background="@color/transparence"
                android:text="Random Product Name" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/product_edit_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/product_add"
                style="@style/buttonTicketLineItem"
                android:layout_width="@dimen/smallBtnWidth"
                android:layout_height="@dimen/smallBtnHeight"
                android:src="@drawable/btn_add" />

            <include layout="@layout/separator" />

            <ImageButton
                android:id="@+id/product_remove"
                style="@style/buttonTicketLineItem"
                android:layout_width="@dimen/smallBtnWidth"
                android:layout_height="@dimen/smallBtnHeight"
                android:src="@drawable/btn_substract" />

            <include layout="@layout/separator" />

            <ImageButton
                android:id="@+id/product_delete"
                style="@style/buttonTicketLineItem"
                android:layout_width="@dimen/smallBtnWidth"
                android:layout_height="@dimen/smallBtnHeight"
                android:src="@drawable/btn_delete" />

            <include layout="@layout/separator" />

            <ImageButton
                android:id="@+id/product_modify"
                style="@style/buttonTicketLineItem"
                android:layout_width="@dimen/smallBtnWidth"
                android:layout_height="@dimen/smallBtnHeight"
                android:src="@drawable/btn_scale" />

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/separator" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:background="@color/transparence"
        android:gravity="center"
        android:text="0,00â‚¬" />

</LinearLayout>