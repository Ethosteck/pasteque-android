<resources>
  
  <color name="contentBackground">#EEE</color>
  <color name="text">#333</color>
  <color name="ticketBackground">#FFF</color>
  <color name="btnBgGradientStart">#bdd2e7</color>
  <color name="btnBgGradientCenter">#fcfdfe</color>
  <color name="btnBgGradientEnd">#bdd2e7</color>
  <color name="btnBgGradientClicked">#bdd2e7</color>
  <color name="btnBorderColor">#7a8a99</color>
  <color name="textBtnBackground">#AAFFFFFF</color>

  <dimen name="contentMargin">5dip</dimen>
  <dimen name="btnSpacing">12.8dip</dimen>
  <dimen name="loginBtnWidth">120dip</dimen>
  <dimen name="btnWidth">64dip</dimen>
  <dimen name="btnHeight">64dip</dimen>
  <dimen name="bigBtnWidth">80dip</dimen>
  <dimen name="bigBtnHeight">80dip</dimen>
  <dimen name="btnCornerRadius">8dip</dimen>

  <style name="POSTechTheme" parent="android:Theme.NoTitleBar">
    <item name="android:textSize">16dip</item>
    <item name="android:textColor">@color/text</item>
    <item name="android:windowBackground">@color/contentBackground</item>
  </style>

  <style name="ticketLineList">
    <item name="android:background">@color/ticketBackground</item>
    <item name="android:cacheColorHint">@color/ticketBackground</item>
  </style>

  <style name="button">
    <item name="android:background">@drawable/btn_bg_gradient</item>
    <item name="android:padding">@dimen/contentMargin</item>
  </style>

  <style name="numButton">
    <item name="android:background">@drawable/btn_bg_gradient</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">24dip</item>
  </style>

  <style name="iconBtnText">
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:layout_margin">@dimen/contentMargin</item>
    <item name="android:background">@color/textBtnBackground</item>
  </style>
</resources>
