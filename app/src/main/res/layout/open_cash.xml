<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <TextView android:id="@+id/open_cash_status"
              android:layout_alignParentTop="true"
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_centerHorizontal="true"
              android:text="@string/cash_not_opened"
            android:layout_above="@+id/open_cash_btn"/>
    <Button android:id="@+id/open_cash_btn"
            android:layout_width="@dimen/bigBtnWidth"
            android:layout_height="@dimen/bigBtnHeight"
            android:layout_centerInParent="true"
            android:padding="@dimen/contentMargin"
            android:background="@drawable/btn_action"
            android:text="@string/cash_open"
            android:onClick="open"/>
</RelativeLayout>